# Paddle Configuration
# Get these from https://vendors.paddle.com/authentication

# Your Paddle API key (get from Developer Tools -> Authentication)
PADDLE_API_KEY=your_paddle_api_key_here

# Paddle environment (sandbox for testing, production for live)
PADDLE_SANDBOX=true

# Webhook secret (get from Developer Tools -> Webhooks)
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret_here

# Cloudflare Workers Configuration (if using Cloudflare Workers)
# These are set in the Cloudflare dashboard as environment variables

# Server Configuration (if using Node.js server)
PORT=3000
NODE_ENV=production

# Email Service (Optional - for sending license keys)
# Resend.com
RESEND_API_KEY=re_...

# SendGrid
SENDGRID_API_KEY=SG....

# Analytics (Optional - for tracking usage)
MIXPANEL_TOKEN=...
POSTHOG_API_KEY=...

# Other
SUPPORT_EMAIL=support@blurtkit.online
